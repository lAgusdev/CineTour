---
interface Props {
	title: string;
}
const { title } = Astro.props;
import { ViewTransitions } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="shortcut icon" href="/logodelapaigna.webp">
		<title>{title}</title>
		<ViewTransitions />
	</head>
	  <body>
		<header class="text-white">
			<nav class="bg-black rounded-b-xl">
				  <div class="container mx-auto flex items-center justify-between">
					<div class="flex-shrink-0">
						  <a href="/"><img src="logodelapaigna.webp" alt="CineTour" title="CineTour" class="h-24 p-3 w-auto px-12"></a>
					</div>
					   <div class="hidden lg:flex space-x-4 p-4 px-10">
						  <a href="/noticias" class="text-white hover:text-gray-500" title="Noticias">Noticias</a>
						  <a href="/opiniones" class="text-white hover:text-gray-500" title="Opiniones">Opiniones</a>
						  <a href="/acercadenostros" class="text-white hover:text-gray-500" title="Acerca de Nosotros">Acerca de Nosotros</a>
						  <input type="checkbox" class="peer sr-only opacity-0" id="toggle" />
						  <label for="toggle" class="relative flex h-6 w-11 cursor-pointer items-center rounded-full bg-yellow-400 px-0.5 outline-gray-400 transition-colors before:h-5 before:w-5 before:rounded-full before:bg-white before:shadow before:transition-transform before:duration-300 peer-checked:bg-gray-500 peer-checked:before:translate-x-full peer-focus-visible:outline peer-focus-visible:outline-offset-2 peer-focus-visible:outline-gray-400 peer-checked:peer-focus-visible:outline-grey-500" for="toggle"></label>
					</div>
					<div class="lg:hidden">
						<input type="checkbox" id="menuCheckbox" class="hidden">
						<label for="menuCheckbox" class="text-white cursor-pointer p-10">
						&#9776;
